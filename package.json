    "description": "Beautiful, modular, programmatic HTML â€” no framework needed. | WARNING: Copyright 2015-2025 Alex Stevovich. All Rights Reserved. Unauthorized use, copying, modification, or distribution is strictly prohibited. See LICENSE for full terms.",
    "exports": {
        "import": "./src/index.js",
        "require": "./gen/index.cjs"
    },
    "type": "module",
    "files": [
        "./src/",
        "./gen"
    ],
    "homepage": "https://github.com/alexstevovich/lydio",
    "scripts": {
        "test": "vitest",
        "tsify": "npx tsc --declaration --emitDeclarationOnly --outFile index.d.ts",
        "preamble": "preamble --apply --dir ./src/",
        "zord": "filezord --zord --dir ./ --id pkg:lydio",
        "pretty": "npx prettier --write .",
        "lint": "eslint ./src/",
        "lint:fix": "eslint --fix ./src/",
        "build": "npm run preamble && npm run pretty && npm run lint:fix && npm run tsify && node build.js && preamble --apply --dir ./gen/  && npm run zord"
    },
    "author": {
        "name": "Alex Stevovich",
        "email": "alex.stevovich@gmail.com",
        "url": "https://alexstevovich.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/alexstevovich/lydio.git"
    },
    "license": "UNLICENSED",
    "keywords": [
        "lydio",
        "html",
        "generator",
        "templating",
        "javascript",
        "fluent",
