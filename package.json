        "structured-html",
        "web",
        "frontend",
        "web-components",
        "ui-library",
        "tag-based",
        "self-closing",
        "dynamic-html"
    ],
    "devDependencies": {
        "@eslint/js": "^9.22.0",
        "eslint": "^9.21.0",
